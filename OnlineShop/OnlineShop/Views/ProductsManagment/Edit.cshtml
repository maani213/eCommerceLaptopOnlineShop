@using Online_Shop.Application.Entities
@model Product
@{
    Layout = "~/Views/AdminPanel/TemplateLayout.cshtml";
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <link href="~/Contentts/CSS/css/style.css" rel="stylesheet" />
    <link href="~/Content/Main.css" rel="stylesheet" />
    @*
        <link href="~/Contentts/CSS/Sheet.css" rel="stylesheet" />
        <link href="~/Contentts/Content/bootstrap.css" rel="stylesheet" />
        <script src="~/Contentts/Scripts/bootstrap.js"></script>
        <script src="~/Contentts/Scripts/jquery-2.1.4.js"></script>
    *@

    <script type="text/javascript">
        function show(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        };
        function show1(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img1').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        };
        function show2(input) {
            if (input.files && input.files[0]) {
                var filerdr = new FileReader();
                filerdr.onload = function (e) {
                    $('#user_img2').attr('src', e.target.result);
                }
                filerdr.readAsDataURL(input.files[0]);
            }
        };
    </script>
</head>
<body>

    <div class="container" style="margin-top:10px;">

        <div id="article">
            <div class="workingArea">


                @using (Html.BeginForm("Edit", "ProductsManagment", FormMethod.Post, new { id = "CreatProductform", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="fieldLabelWraper">
                        <label for="title" accesskey="t" class="fieldLabel"><span class="accessKeyStyle">T</span>itle</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.Title, new { @class = "textBox;", style = "width:300px", id = "title" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.Title)</div>



                    <div class="fieldLabelWraper">
                        <label for="description" accesskey="d"><span class="accessKeyStyle">D</span>escription</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.Description, new { @class = "textBox;", style = "width:300px", id = "description" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.Description)</div>




                    <div class="fieldLabelWraper">
                        <label for="processortype" accesskey="p"><span class="accessKeyStyle">P</span>rocessor Type</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.ProcessorType, new { @class = "textBox;", style = "width:300px", id = "processortype" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.ProcessorType)</div>


                    <div class="fieldLabelWraper">
                        <label for="ram" accesskey="r"><span class="accessKeyStyle">R</span>AM</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.RAM, new { @class = "textBox;", style = "width:300px", id = "ram" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.RAM)</div>


                    <div class="fieldLabelWraper">
                        <label for="category" accesskey="c"><span class="accessKeyStyle">C</span>ategory</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.DropDownListFor(
                                  m => m.categoryId,
                                 @ViewBag.Category as IEnumerable<SelectListItem>,
                                 "--Select Category--", new { @class = "dropdownList", style = "width:25%;" })
                    </div>
                    @*<div style="color:red">@Html.ValidationMessageFor(m => m.categoryId)</div>*@
                    <div class="fieldLabelWraper">
                        <label for="harddrive" accesskey="h"><span class="accessKeyStyle">O</span>perating System</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.DropDownListFor(
                                 m => m.OperatingSystem,
                                 @ViewBag.OperatingSystem as List<SelectListItem>,
                                 "--Select OS--", new { @class = "dropdownList", style = "width:25%;" })
                    </div>
                    @*<div style="color:red">@Html.ValidationMessageFor(m => m.OperatingSystem)</div>*@

                    <div class="fieldLabelWraper">
                        <label for="webcam"><span class="accessKeyStyle">W</span>ebCam</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.DropDownListFor(
                                   m => m.WebCam,
                                   @ViewBag.webcam as List<SelectListItem>,
                                 "--Webcam--", new { @class = "dropdownList", style = "width:25%;" })
                    </div>
                    @* <div style="color:red">@Html.ValidationMessageFor(m => m.WebCam)</div>*@

                    <div class="fieldLabelWraper">
                        <label for="dedicatedgraphics"><span class="accessKeyStyle">D</span>edicated Graphic Memory</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.DedicatedGraphicMemory, new { @class = "textBox;", style = "width:300px", id = "graphic" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.DedicatedGraphicMemory)</div>

                    <div class="fieldLabelWraper">
                        <label for="harddrive" accesskey="h"><span class="accessKeyStyle">H</span>ard Drive</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.HardDrive, new { @class = "textBox;", style = "width:300px", id = "harddrive" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.HardDrive)</div>
                    <div class="fieldLabelWraper">
                        <label for="screensize"><span class="accessKeyStyle">S</span>creenSize</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.ScreenSize, new { @class = "textBox;", style = "width:300px", id = "screensize" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.ScreenSize)</div>

                    <div class="fieldLabelWraper">
                        <label for="screensize"><span class="accessKeyStyle">P</span>rice</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.Price, new { @class = "textBox;", style = "width:300px", id = "price" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.Price)</div>

                    <div class="fieldLabelWraper">
                        <label for="screensize"><span class="accessKeyStyle">S</span>tatus</label>
                    </div>
                    <div class="fieldControlWraper">
                        @Html.TextBoxFor(m => m.Status, new { @class = "textBox;", style = "width:300px", id = "status" })
                    </div>
                    <div style="color:red">@Html.ValidationMessageFor(m => m.Status)</div>



                    <div>
                        <input type="submit" value="SaveProduct" name="BtnSubmit" class="buttonPrime" />

                        <input type="button" value="Reset" name="BtnReset" onclick="Reset()" class="buttonPrime" />

                        <input type="submit" value="Cancel" name="BtnSubmit" class="buttonPrime" />
                    </div>

                }

            </div>
        </div>
    </div>
</body>
</html>

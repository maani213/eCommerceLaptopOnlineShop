@using Online_Shop.Application.Entities
@model Order

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
    ViewBag.Title = "CheckOut Process";
    }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddressAndPayment</title>

    <link href="~/Contentts/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Contentts/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Contentts/Scripts/bootstrap.js"></script>
    <link href="~/Contentts/CSS/Sheet.css" rel="stylesheet" />
    <script src="~/Contentts/Microsoft.jQuery.Unobtrusive.Validation.2.0.30506.0/Content/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Contentts/Microsoft.jQuery.Unobtrusive.Ajax.2.0.30506.0/Content/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>

    @*@Html.EnableClientValidation("");*@

    <div class="container" style="width:980px;margin-bottom:0px;">

        @using (Html.BeginForm("AddressAndPayment", "CheckOut", FormMethod.Post))
        {
            <div style="float:left;width:49%">
                <h3 style="margin-bottom:10px;">Shipping Address</h3>
                <div>
                    <div class="form-group" style="float: left;">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", style = "width:98%;", placeholder = "First Name" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", style = "width:35%;", placeholder = "Last Name" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", style = "width:73%;", placeholder = " Address" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
                <div>
                    <div class="form-group" style="float:left;">
                        @Html.TextBoxFor(model => model.Country, new { @class = "form-control", style = "width:98%;", placeholder = "Country" })
                        @Html.ValidationMessageFor(model => model.Country)
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(model => model.City, new { @class = "form-control", style = "width:35%;", placeholder = "City" })
                        @Html.ValidationMessageFor(model => model.City)
                    </div>
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(model => model.State, new { @class = "form-control", style = "width:73%;", placeholder = "State" })
                    @Html.ValidationMessageFor(model => model.State)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.PostalCode, new { @class = "form-control", style = "width:73%;", placeholder = "Postal Code" })
                    @Html.ValidationMessageFor(model => model.PostalCode)
                </div>



                <div class="form-group">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", style = "width:73%;", placeholder = "Phone" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", style = "width:73%;", placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div style="width:48%;clear:left;">

                <h3>Payment</h3>
                <p>
                    We're running a promotion: all music is free with the promo code "FREE"
                </p>
                <div class="editor-label">
                    @Html.Label("Promo Code")
                </div>
                <div class="editor-field">
                    @Html.TextBox("PromoCode")
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>

        }
    </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
</body>
</html>

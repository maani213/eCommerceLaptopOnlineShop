@using Online_Shop.Application.Entities
@model IEnumerable<UserDetail>

@{
    Layout = "~/Views/AdminPanel/TemplateLayout.cshtml";
    ViewBag.Title = "All Users";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All Users</title>


    <link href="~/Contentts/CSS/css/style.css" rel="stylesheet" />

</head>
<body>
    <div id="container">
        <div class="shell">
            <!-- Main -->
            <div id="main">
                <div class="cl">&nbsp;</div>

                <!-- Content -->
                <div id="content">

                    <!-- Box -->
                    <div class="box">
                        <!-- Box Head -->
                        <div class="box-head">
                            <h2 class="left" style="margin-right:6px;">ALL Registered Users</h2>

                        </div>
                        <!-- End Box Head -->
                        <!-- Table -->
                        <div class="table">
                            <table style="width:100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <th style="text-align:center"></th>
                                    <th style="text-align:center">Name</th>
                                    <th style="text-align:center">User ID</th>
                                    <th style="text-align:center">Password</th>
                                    <th style="text-align:center">Email</th>                                  
                                </tr>

                                @foreach (UserDetail mdl in Model)
                                {
                                    <tr>
                                        <td style="text-align:center"> @if(mdl.imgUrl!=null){ <img src=@Url.Content(mdl.imgUrl) style="height:30px;width:30px;" />}</td>
                                        <td style="text-align:center">@mdl.FName &nbsp; @mdl.LName</td>
                                        <td style="text-align:center">@mdl.UserId</td>
                                        <td style="text-align:center">@mdl.Password</td>
                                        <td style="text-align:center">@mdl.Email</td>
                                        

                                    </tr>

                                }

                                


                            </table>


                        </div>
                        <!-- Table -->

                    </div>
                    <!-- End Box -->
                    <!-- Box -->
                    <!-- End Box -->

                </div>
                <!-- End Content -->
                <!-- Sidebar -->
                <!-- End Sidebar -->

                <div class="cl">&nbsp;</div>
            </div>
            <!-- Main -->
        </div>
    </div>



    
           
</body>
</html>
